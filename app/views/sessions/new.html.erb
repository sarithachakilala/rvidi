<h1><%= t(:sign_in) %></h1>

<%= form_tag sessions_path do %>
  <p>
    <%= t(:email_user) %><br />
    <%= text_field_tag :login, params[:login] , :placeholder=> "Enter email or username"%>
  </p>
  <p>
    <%= t(:password) %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Sign in" %></p>
<% end %>