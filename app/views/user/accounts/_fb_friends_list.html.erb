<ul class="thumbnails">
  <li class="span12">
    <div class="">
      Here are the list of Facebook Friends.
    </div>
    <% @facebook_friends.each do |friend| %>
      <div class="thumbnail frinds_thumbnail_padding">
        <div class="row-fluid frinds_row_margin">
          <div class="span4">
            <div class="row-fluid">
              <div class="span4">
                <div class="friend_image">
                  <img  src="<%= friend['picture']['data']['url'] %>" alt="300x200" />
                </div>
              </div>
              <div class="span8">
                <div class="friend_name"><%= friend['name'] %></div>
                <!-- <div class="friends_show"> 3 shows,&nbsp; -->
                <!-- <a class="frinds_cameos"> 12 cameos </a> </div>-->
                <div class="btn-small btn-warning">
                  <%= link_to "Invite Friend", "#",
                              :class => 'button-facebook-friend-invite',
                    :id => friend['id'] %>
                  <!-- send_twitter_friend_request_users_path(:friend_id => each_user_detail.id)> -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </li>
</ul>