<% if @success %>
  $("#show_<%= @comment.show_id %>_add_comments_div").html("")
  $("#show_<%= @comment.show_id %>_show_comments_div").html("<%= j(render :partial => "comments/show_comments_list", :locals => {:show_comments => @show_comments, :all_comments => @all_comments, :show => @show}) %>")
<% else %>
  $("#show_<%= @comment.show_id %>_add_comments_div").html("<%= j(render :partial => "comments/comments_fields", :locals => { :comment => @comment }) %>")
<% end %>
