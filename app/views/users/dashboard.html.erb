<div class="login_container">
  <div class="row-fluid">
    <div class="span2"> 
      <div class="">
        <% if @user.image? %>
          <%= image_tag @user.image_url, :class => "jane_image"  %>
        <% else %>
          <img alt="" src="/assets/default_image.png" class="jane_image">
        <% end %>
      </div>
    </div>
    <div class="span10">
      <div class="myvision_title">Welcome back, <%= @user.first_name.capitalize %>!</div>
      <div class="margin_top_10">
        <% if @cameo_invitations.count>0 %>
          <div class="font_weight_bold">Your have <%= link_to " #{@cameo_invitations.count} new cameo invitation", notification_user_path(:id => current_user.id) %></div>
        <% end %>
        <% @show_notifications.each do |k,v| %>
          <% show = Show.find(k) %>
          <div class="font_weight_bold"> Your show <%= link_to "#{show.title} ", show_path(:id=> k) %>has <%= link_to "#{v.length} new cameos", show_path(:id=> k, :to_contribute => "read") %> </div>
        <%end%>
        <% @cameo_contributors.each do |k,v| %>
          <% show = Show.find(k) %>
          <div class="font_weight_bold"> <%= v.length%> new cameos have been posted after your in show <%= link_to "#{show.title} ", show_path(:id=> k, :to_contribute => "read") %></div>  
        <% end %>
        <% if @notifications.count>0 %>
          <div class="font_weight_bold">You have  <%= @notifications.count %> new <%= link_to "friend Requests", notification_user_path(current_user.id) %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div style="padding-left: 20px;" class="span12"> 
    <div class="tabbable"> 
      <ul class="nav nav-tabs" style="padding-left:17px;">
        <li class="active"><a data-toggle="tab" href="#tab1">My Shows</a></li>
        <li><a data-toggle="tab" href="#tab2">Cameos</a></li>
      </ul>
      <div class="tab-content">
        <div id="tab1" class="tab-pane active">
          <div class="span text_align_right">
            <ul class='links_container'>
              <a id='thumb' class="sprite-list-icon display_formats activeLink " href="javascript:void(0);"> </a>
              <a id='list' class="sprite-details-icon-lite display_formats" href="#"> </a>
            </ul>
          </div>

          <% if current_user.shows.present? %>
            <% current_user.shows.each_slice(5) do|slice| %>
              <div class="thumb_formats showsformat">
                <div class="row-fluid">
                  <ul class="thumbnails margin_top_5">
                    <% slice.each do|show| %>
                      <%= render :partial => "show_thumbnail", :locals => { :show => show } %>
                    <% end %>
                  </ul>
                </div>
              </div>
              <div class="list_formats showsformat hide">
                <% slice.each do|show| %>
                  <ul class="thumbnails">
                    <li class="span12">
                      <%= render :partial => "shows_list", :locals => { :show => show } %>
                    </li>
                  </ul>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="row-fluid">No Shows Exist for <%= current_user.username %></div>
          <% end %>
        </div>

        <div id="tab2" class="tab-pane">
          <div class="span text_align_right"> 
             <ul class='ulinks_container'>
              <a id='thumb' class="sprite-list-icon display_format activLink " href="javascript:void(0);"> </a>
              <a id='list' class="sprite-details-icon-lite display_format" href="#"> </a>
            </ul>
          </div>
          <% if current_user.contributed_shows.present? %>
            <% current_user.contributed_shows.each_slice(5) do|contr_slice| %>
              <div class="thumb_format showsformats">
              <div class="row-fluid">
                <ul class="thumbnails margin_top_5">
                  <% contr_slice.each do|show| %>
                    <%= render :partial => "show_thumbnail", :locals => { :show => show } %>
                  <% end %>
                </ul>
              </div>
            </div>
              <div class="list_format showsformats hide">
                <% contr_slice.each do|show| %>
                  <ul class="thumbnails">
                  <li class="span12">
                      <%= render :partial => "shows_list", :locals => { :show => show } %>
                  </li>
                  </ul>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="row-fluid">No Contributions Exist by <%= current_user.username %></div>
          <% end %>
          <!-- <div class="see_more text_align_right margin_top_10"> See more</div> -->
        </div>
      </div>
    </div>
    <div class="span3 text_align_center"></div>
    <div class="hr_bg_welcome"> 
      <div class="text_align_center login_and_account"> 
        <%= link_to "<i class='sprite-camera-white'></i>Start a new show".html_safe, new_show_path, :class => "btn btn-warning" %>
      </div>
    </div>
  </div>
  
</div>
