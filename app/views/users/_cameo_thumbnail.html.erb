<li class="thumbnail_fivegroup" style="">
  <div class="thumbnail">
    <div class="triangle-with-shadow item">  
      <% thumbnail = cameo.present? ? cameo.thumbnail_url : "/assets/photo_background_2916660.jpeg" %>
      <%= link_to "<img class='thumbnail_image_widht_five' src='#{thumbnail}' alt='300x200'><span class='play'></span>".html_safe, cameo_path(:id=>cameo.id) %>
     </div>
    <div class="row-fluid caption1">
      <div class="span9">
        <div class="thumbnail_title"><%= link_to cameo.show.title, show_path(:id=>cameo.show.permalink) %></div>
        <div class="thumbnail_title"><%= link_to cameo.title.present? ? cameo.title.capitalize : "No Title" , cameo_path(:id=>cameo.id), :class=>"thumbnail_name" %></div>
        <div class="thumbnail_contributor"><%= current_user.full_name.titlecase %> </div>

        <% unless cameo.published_status == "published"%>
        <div><%= link_to "Publish Cameo", edit_cameo_path(cameo) , :class=>" btn btn-mini btn-info"%> </div>
        <% end %>
        <%#= link_to "Go to show", show_path(:id=>cameo.show.permalink), :class=>"btn btn-mini btn-warning " %>
      </div>
     
    </div>
  </div>
</li>

   