<% li_extra_class = current_user.is_director?(show) ? "lengthier" : "" %>
<li class="thumbnail_fivegroup <%= li_extra_class %>" style="">
  <div class="thumbnail">
    <div class="triangle-with-shadow item">  
      <%= link_to "<img class='thumbnail_image_widht_five' src='#{show.cameos.first.thumbnail_url}' alt='300x200'><span class='play'></span>".html_safe, show_path(show) %>
    </div>
    <div class="row-fluid caption1">
      <div class="span9">
        <div class="thumbnail_title"><%= link_to show.title, show_path(show) %></div>
        <div class="thumbnail_name"><%= show.director.username %></div>
        <div class="thumbnail_contributor"><%= show.cameos.size %> Contributors </div>
        <% if current_user.is_director?(show) %>
          <div class="thumbnail_contributor"><%= link_to "Edit Show", edit_show_path(show) %> </div>
        <% end %>
      </div>
      <div class="span3"> 
        <i class="sprite-thumbnail_title_icon"></i>
      </div>
    </div>
  </div>
</li>
