  
<div class="container" style="width: 800px;">
  <div class="jQueryFriends"></div>
  </div>
<div class="myvision_container">
  <div class="row-fluid">
    <div class="span12 frinds_container_padding">
      <!-- Details view start here -->
      <div class="row-fluid" >
        <div class="span4"> 
          <div class="myvision_title span">
            Notifications
          </div>
          <div class="">
            Click on Accept friends.
          </div>
        </div>
      </div>
      <div id= "main_frame">
        <ul class="thumbnails">
          <li class="span12">
            <% @notifications.each do |each_user_detail| %>
              <% @user = User.find(each_user_detail.from_id)%>
              <div class="thumbnail frinds_thumbnail_padding">
                <div class="row-fluid frinds_row_margin">
                  <div class="span4"> 
                    <div class="row-fluid"> 
                      <div class="span4">
                        <div class="friend_image"> 
                          <img  src="/assets/OCP0154256_P_Portrait-of-a-young-man.png" alt="300x200" >
                        </div> 
                      </div>
                      <div class="span8">
                        <div class="friend_name"><%= @user.username %></div>
                        <div class="friends_show"> 3 shows,&nbsp;<a class="frinds_cameos">12 cameos </a>
                         </div>
                          <div class="btn-small btn-warning">
                          <%= link_to "Confirm as friend", accept_friend_request_users_path(:friend_id => each_user_detail.from_id) %></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
      <!-- Details view end here -->
    </div>
  </div>

</div>