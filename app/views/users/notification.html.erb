<div class="main_class" style="padding-bottom: 100px;">
  <div class="myvision_container edit_contributor_padding">
    <div class="accordion" id="accordion2">
      <div class="accordion-group plus-minus-container">
        <div class="accordion-heading edit_contributor_title_padding">
          <div class="accordion-toggle myvision_title_dark line_height_40 changeable-plus-minus" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
            Accept Friends  <i class="sprite-minus-small plus-minus-i pull-right "> </i>
          </div>
        </div>
        <div id="collapseTwo" class="accordion-body collapse in">
          <div class="accordion-inner padding_none">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span12">
                  <div class="edit_contributor_text">
                    <div id= "main_frame">
                      <ul class="thumbnails">
                        <li class="span12">
                          <% if @friend_requests.present?%>
                            <% @friend_requests.each do |each_user_detail| %>
                              <% @user = User.find(each_user_detail.from_id)%>
                               <% shows = Show.where(:user_id => @user.id).count %>
                               <% cameos = Cameo.where(:director_id => @user.id).count %>
                              <div class="thumbnail frinds_thumbnail_padding">
                                <div class="row-fluid frinds_row_margin">
                                  <div class="span8"> 
                                    <div class="row-fluid"> 
                                      <div class="span4">
                                        <div class="friend_image">
                                          <% thumbnail = @user.image_url.present? ? @user.image_url : "/assets/default_image.png"  %>
                                          <%= image_tag thumbnail, :class => "details_image_sizesmall"  %>
                                        </div> 
                                      </div>
                                      <div class="span6">
                                        <div class="friend_name"><%= @user.full_name.titlecase %></div>
                                        <div class="friends_show"> <%= shows%>shows,&nbsp;<%= cameos %> cameos 
                                         </div>
                                         <div class = "row-fluid">
                                          <div class = "span6">
                                            <div class="btn-small btn-warning">
                                              <%= link_to "Confirm as friend", accept_friend_request_users_path(:friend_id => each_user_detail.from_id) %>
                                            </div>
                                          </div>
                                          <div class = "span6">
                                            <div class="btn-small btn-info">
                                              <%= link_to "Ignore request ", ignore_friend_request_users_path(:friend_id => each_user_detail.from_id) %>
                                            </div>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            <% end %>
                          <%else%>
                            No Notifications
                          <% end %>
                        </li>
                      </ul>
                    </div>
                  </div> 
                </div> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="myvision_container edit_contributor_padding">
    <div class="accordion" id="accordion2">
      <div class="accordion-group plus-minus-container">
        <div class="accordion-heading edit_contributor_title_padding">
          <div class="accordion-toggle myvision_title_dark line_height_40 changeable-plus-minus" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">
            Cameo Invitations  <i class="sprite-minus-small plus-minus-i pull-right "> </i>
          </div>
        </div>
        <div id="collapseThree" class="accordion-body collapse in">
          <div class="accordion-inner padding_none">
            <div class="row-fluid">
              <div class="row-fluid">
                <div class="span12">
                  <div class="edit_contributor_text">
                    <div id= "main_frame">
                      <ul class="thumbnails">
                        <li class="span12">
                          <% if @cameo_invitations.present? %>
                            <% @cameo_invitations.each do |each_user_detail| %>
                              <% @user = User.find(each_user_detail.from_id)%>
                              <% show = Show.find(each_user_detail.show_id)%>
                              <div class="thumbnail frinds_thumbnail_padding">
                                <div class="row-fluid frinds_row_margin">
                                  <div class="span12"> 
                                    <div class="row-fluid"> 
                                      <div class="span2">
                                        <div class="friend_image"> 
                                          <% thumbnail = @user.image_url.present? ? @user.image_url : "/assets/default_image.png"  %>

                                          <%= image_tag thumbnail, :class => "details_image_sizesmall"  %>
                                        </div> 
                                      </div>
                                      <div class="span8">
                                        <div><b><%= @user.full_name.titlecase %></b>
                                        <%= each_user_detail.content %><%= link_to "#{show.title}".capitalize, show_path(:id=>each_user_detail.show_id, :to_contribute=>"yes") %></div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            <% end %>
                          <%else%>
                            No Notifications
                          <% end %>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="myvision_container">
    <div class="accordion" id="accordion3">
      <div class="accordion-group plus-minus-container">
        <div class="accordion-heading invite_friends_padding">
          <div class="accordion-toggle myvision_title_dark line_height_40 changeable-plus-minus" data-toggle="collapse" data-parent="#accordion3" href="#collapseFour">
            All Notifications <i class="sprite-minus-small plus-minus-i pull-right"> </i>
          </div>
        </div>
        <div id="collapseFour" class="accordion-body collapse in">
          <div class="accordion-inner">
            <div class="row-fluid"> 
              <div class="span12">
                <div id= "main_frame">
                <ul class="thumbnails">
                  <li class="span12">
                  <% @notifications.each do |each_user_detail| %>
                    <% @user = User.find(each_user_detail.from_id)%>
                    <div class="thumbnail frinds_thumbnail_padding">
                      <div class="row-fluid frinds_row_margin">
                        <div class="span12"> 
                          <div class="row-fluid"> 
                            <div class="span2">
                              <div class="friend_image"> 
                                <% thumbnail = @user.image_url.present? ? @user.image_url : "/assets/default_image.png"  %>
                                
                                <%= image_tag thumbnail, :class => "details_image_sizesmall"  %>
                              </div> 
                            </div>
                            <div class="span6">
                              <div><b><%= @user.full_name.titlecase %></b>
                              <%= each_user_detail.content %></div>
                            </div>
                            <div class="span4">
                              <div><%=each_user_detail.updated_at.strftime("%m-%d-%Y %H:%M:%S ") %></div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  </li>
                </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id= "main_frame" class = "selects-container"></div>
    </div>
  </div>
</div>