  
<div class="container" style="width: 800px;">
  <div class="jQueryFriends"></div>
  </div>
<div class="myvision_container">
  <div class="row-fluid">
    <div class="span12 frinds_container_padding">
      <!-- Details view start here -->
      <div class="row-fluid" >
        <div class="span4"> 
          <div class="myvision_title span">
            Notifications
          </div>
        </div>
      </div>
      <div id= "main_frame">
        <div class="">
            Click on Accept friends.
          </div>
        <ul class="thumbnails">
          <li class="span12">

            <% @friend_requests.each do |each_user_detail| %>
              <% @user = User.find(each_user_detail.from_id)%>
              <div class="thumbnail frinds_thumbnail_padding">
                <div class="row-fluid frinds_row_margin">
                  <div class="span8"> 
                    <div class="row-fluid"> 
                      <div class="span4">
                        <div class="friend_image">
                          <%= image_tag @user.image_url, :class => "details_image_sizesmall"  %>
                        </div> 
                      </div>
                      <div class="span6">
                        <div class="friend_name"><%= @user.full_name %></div>
                        <div class="friends_show"> 3 shows,&nbsp;<a class="frinds_cameos">12 cameos </a>
                         </div>
                         <div class = "row-fluid">
                          <div class = "span6">
                            <div class="btn-small btn-warning">
                              <%= link_to "Confirm as friend", accept_friend_request_users_path(:friend_id => each_user_detail.from_id) %>
                            </div>
                          </div>
                          <div class = "span6">
                            <div class="btn-small btn-info">
                              <%= link_to "Ignore request ", ignore_friend_request_users_path(:friend_id => each_user_detail.from_id) %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
      <div id= "main_frame">
        <div class="">
            Cameo Invitations
          </div>
        <ul class="thumbnails">
          <li class="span12">

            <% @cameo_invitations.each do |each_user_detail| %>
              <% @user = User.find(each_user_detail.from_id)%>
              <div class="thumbnail frinds_thumbnail_padding">
                <div class="row-fluid frinds_row_margin">
                  <div class="span12"> 
                    <div class="row-fluid"> 
                      <div class="span2">
                        <div class="friend_image"> 
                          <%= image_tag @user.image_url, :class => "details_image_sizesmall"  %>
                        </div> 
                      </div>
                      <div class="span8">
                        <div><b><%= @user.username.capitalize %></b>
                        <%= each_user_detail.content %><%= link_to " Show", show_path(:id=>each_user_detail.show_id, :to_contribute=>"yes") %></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
      <div id= "main_frame">
        <div class="">
            All Notifications
          </div>
        <ul class="thumbnails">
          <li class="span12">

            <% @notifications.each do |each_user_detail| %>
              <% @user = User.find(each_user_detail.from_id)%>
              <div class="thumbnail frinds_thumbnail_padding">
                <div class="row-fluid frinds_row_margin">
                  <div class="span12"> 
                    <div class="row-fluid"> 
                      <div class="span2">
                        <div class="friend_image"> 
                          <%= image_tag @user.image_url, :class => "details_image_sizesmall"  %>
                        </div> 
                      </div>
                      <div class="span6">
                        <div><b><%= @user.username.capitalize %></b>
                        <%= each_user_detail.content %></div>
                      </div>
                      <div class="span4">
                        <div><%=each_user_detail.updated_at.strftime("%y-%m-%d %H:%M:%S ") %></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
      <!-- Details view end here -->
    </div>
  </div>

</div>