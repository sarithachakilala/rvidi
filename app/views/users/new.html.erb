<h1><%=t :singn_up %></h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2><%=t :form_is_invalid %></h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= t(:email) %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= t(:username) %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= t(:password) %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= t(:password_confirmation) %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>