<%= form_for @user, :html => {:class => "js-validated-form"} do |f| %>

  <div class="login_container">
    <div class="row-fluid">
      <div class="span6">
        <div class="login_title"> Already an rVidi member? 
          <%= link_to "Log In", sign_in_path %>
        </div>
        <p> Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book</p>
        <br>
        <br>
        <div class="login_title">Login with Facebook or Twitter </div>
        <%= link_to "<i class='sprite-facebook-white'></i>Login with Facebook".html_safe, "/auth/facebook", id: "sign_in", class: "btn btn-primary" %>
        <%= link_to "<i class='sprite-twitter-white'></i>Login with Twitter".html_safe, "/auth/twitter", id: "sign_in", class: "btn btn-info" %>

        <p class="margin_top_10"> rVidi will access friend list from Facebook or Twitter, allowing you to invite them to participate in videos, etc. Copy goes here explaining. You can also add your friend from Facebook or Twitter later on. </p>
      </div>
      <div class="span2 text_align_center">
        <i class="sprite-or-icon" style="margin-top: 125px;"></i>
      </div>
      
      <div class="span4 text_align_center"> 
        <div class="login_title">Create a New Account</div>
        <%= hidden_field_tag :from_id, params[:from_id]%>
        <%= hidden_field_tag :from_email, params[:email]%>
        <%= hidden_field_tag :invited_from, params[:invited_from]%>
        
        <div><%= f.text_field :username, :class => "span12 js-required", :placeholder => "Pick a Username" %></div>
        <div><%= f.text_field :first_name, :class => "span12 js-required", :placeholder => "Pick a Firstname" %></div>
        <div><%= f.text_field :last_name, :class => "span12 js-required", :placeholder => "Pick a Lastname" %></div>
        <% if params[:email].present?%>
          <div><%= f.text_field :email, :class => "span12 js-required", :placeholder => "Email Address", :value => params[:email], :readonly=>true %></div>
        <% else %>
          <div><%= f.text_field :email, :class => "span12 js-required", :placeholder => "Email Address" %></div>
        <% end %>
        <div><%= f.password_field :password, :class => "span12 js-required", :placeholder => "Choose a Password" %></div>
        <div><%= f.password_field :password_confirmation, :class => "span12 js-required", :placeholder => "Re-type Password" %></div>
        <div><%= f.text_field :city, :class => "span12", :placeholder => "City" %></div>
        <div><%= f.text_field :state, :class => "span12", :placeholder => "State" %></div>
        <div><%= f.text_field :country, :class => "span12", :placeholder => "Country" %></div>
        <div>
          <%= f.check_box :terms_conditions %>
          <span> I agree to the <%= link_to "Terms and Condition", "/home/terms_condition" , :target => "_blank"%></span>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="pull-right">
        <br/>
        <%= recaptcha_tags :public_key => '6Ld0H-ESAAAAAJKKxhs4c5wZ_yLlRSN9vAuj98GJ', :ssl => true, :display => {:theme => 'white'} %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="pull-right"> 
        <br/>
        <%= link_to "Cancel", home_index_path, :class => 'btn' %>
        <i class="sprite-or-icon_black" style=""></i>
        <%= f.submit 'Create Account', :class => "btn btn-warning" %>
      </div>
    </div>
  </div>
  <!-- login container end here -->
<% end %>

<% content_for :js do %>
  facebookLogin("<%= configatron.facebook_app_id %>");
<% end %>
