<div class="login_container">
  <div class="span6 margin_bottom_10"> 
    <h1> Edit Profile Page</h1>
  </div>
  <div class="row-fluid">
    <%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>
      <div class="span6">
        <% if @user.errors.any? %>
          <div class="error_messages">
            <h2><%#=t :form_is_invalid %></h2>
            <ul>
              <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="control-group">
          <label class="control-label" for="inputEmail">Email</label>
          <div class="controls">
            <%= f.text_field :email %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="inputcity">City</label>
          <div class="controls">
            <%= f.text_field :city %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="inputcountry">Country</label>
          <div class="controls">
            <%= f.text_field :country %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputstate">State</label>
          <div class="controls">
            <%= f.text_field :state %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputstate">Upload Picture</label>
          <div class="controls">
            <%= f.file_field :image %>
          </div>
        </div>
        
        <div class="control-group"></div>
        <div class="control-group">
          <div class="controls pull-left" style="">
            <%= f.submit "Save Changes", :class => "btn btn-warning" %>
          </div>
        </div>        
      </div>

      <div class="span5"> 
        <div class="control-group">
          <label class="control-label" for="inputusername">User Name</label>
          <div class="controls">
            <%= f.text_field :username %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputstate">First Name</label>
          <div class="controls">
            <%= f.text_field :first_name %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputdescription">Last Name</label>
          <div class="controls">
            <%= f.text_field :last_name %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputdescription">Description</label>
          <div class="controls">
            <%= f.text_area :description, :rows => 6 %>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
</div>