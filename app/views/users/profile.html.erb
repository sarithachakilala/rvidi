<h1>Profile details</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2><%=t :form_is_invalid %></h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= t(:email) %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= t(:username) %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= t(:city) %><br />
    <%= f.text_field :city %>
  </p>  
  <p>
    <%= t(:state) %><br />
    <%= f.text_field :state %>
  </p> 
  <p>
    <%= t(:country) %><br />
    <%= f.text_field :country %>
  </p>
  <p>
    <%= t(:description) %><br />
    <%= f.text_field :description %>
  </p>
 
  <p class="button"><%= f.submit %></p>
<% end %>