
<!-- If the show is protected  -->

<% if @contribution_preference == "password_protected" %>

  <%= render :partial => 'web/cameos/form/password_protected_section',
    :locals => {:cameo => @cameo} %>

  <!-- Verifying whether the user is invited to the show or not -->
<% elsif @contribution_preference =="private" &&  @cameo.show.user_id != current_user.id &&
    !@invited.present? %>
  <%= render :partial => 'web/cameos/private_show_section'  %>

<% else %>

  <%= form_for [:web, @cameo],
                :html => { :class => "js-validated-form form-horizontal cameo-form",
                           :multipart => true,
                           :target => 'iframe-video-container' } do |f| %>

    <!-- Form fields - Cameo Deatils (Black Box) -->
    <%= render :partial => "web/cameos/form/cameo_form_block",
      :locals => { :f => f, :title => "Cameo Details" } %>

    <!-- Recording Section (White Box) -->
    <%= render :partial => "web/cameos/form/record_cameo_block",
               :locals => { :f => f, :title => "Record the Cameo" } %>

    <!-- Invite Friends from Facebook and Twitter (White Box) -->
    <% if @cameo.invite_my_friend_to_this_show?(current_user) %>
      <%= render :partial => "web/shows/form/invite_friends_block",
        :locals => { :f => f } %>
    <% end %>
    <!-- Show Publish Button which submits the form -->
    <div class="buttons_height">
      <div class=" hr_bg" style="">
        <div class="text_align_center newshow_btn">
          <%= f.submit "Save Cameo",
            :class => "btn btn-warning publish-show-btn",
            :id => 'validate_new_cameo' %>
          <%= link_to "Cancel", web_show_path(:id => @cameo.show.id),
            :class => "btn  btn-info " %>
        </div>
      </div>
    </div>

  <% end %>
<% end %>
