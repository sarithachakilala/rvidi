<!-- player container and a splash image (play button) -->
<div class="row-fluid">
  <div class="span7" style="width: 500px; height:350px;">
    <a class="player plain" id="player2">
      <img src="<%= show.first_cameo_thumb(:player) %>" class="button" alt="" />
    </a>
  </div>

  <div class="span4">
    <div class="clips petrol" id="sortable">
      <% show.cameos.each_with_index do |cameo, index| %>
        <div>
          <div style="float: left;width:25px;">
            <div style="height:25px;">
              <% status = cameo.status== "enabled" ? true : false%>
              <%= check_box_tag('active_cameos[]', cameo.id, checked = status,
                :class => 'cameo_check')  %>
            </div>
            <div style="height:25px;">
              <%= link_to "<i class='sprite-into-icon'></i>".html_safe,
                web_cameo_path(cameo),
                :class => 'not-playlist',
                :method => :delete,
                :confirm => "Are you sure to remove this Cameo?",
                :remote => true %>
            </div>
          </div>

          <div style="float:left; width:220px;">
            <a href="<%= cameo.rtmp_streaming_url %>"
               class="pl-entry">
                <%= image_tag cameo.user.image_url, :class => "pull-left margin-right-10 height-40" %>
                 <%= cameo.title %>
                <span><%= cameo.duration %></span>
                <em><%= cameo.metadata["resolution"] %></em>
            </a>
          </div>
          <div style="float: left">
          </div>
        </div>
        <div style="clear:both;"></div>
      <% end %>
    </div>
  </div>

</div>

<% content_for :js_with_script_tags do %>
  <script type="text/javascript">
    wowzaStreamingServerPlaylist( "player2", true );
  </script>
<% end %>



