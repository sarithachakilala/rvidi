<%= form_for([@documentation, @api, @resource, @parameter]) do |f| %>
    
    <fieldset>
      <div class="clearfix">
        <%= f.label :name %>
        <div class="input">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="clearfix">
        <%= f.label :description %>
        <div class="input">
          <%= f.text_area :description, :class => "span8" %>
        </div>
      </div>
      <div class="clearfix">
        <%= f.label :required %>
        <div class="input">
          <%= f.check_box :required %>
        </div>
      </div>
      <div class="clearfix">
        <%= f.label :example_value %>
        <div class="input">
          <%= f.text_field :example_values, :class => "span8" %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit :class => "btn primary" %>
      </div>
    </fieldset>
<% end %>
