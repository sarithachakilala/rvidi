
<%= form_for([@documentation, @api, @resource]) do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
        <% @resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :http_method %>
      <div class="input">
        <%= f.select :http_method, Resource.http_methods, {}, {:class => ""} %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :url %>
      <div class="input">
        <%= f.text_field :url, :class => "span8" %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :description %>
      <div class="input">
        <%= f.text_area :description, :class => "span8" %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :sample_response %>
      <div class="input">
        <%= f.text_area :sample_response, :class => "span8" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn primary" %>
    </div>
  </fieldset>
<% end %>
