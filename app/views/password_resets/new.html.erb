<div class="login_container" style="height:180px;">
  <div class="row-fluid" >
    <div class="span12 " style="text-align:center;">
      <h2> Forget Password</h2>
    </div>
  </div>
 
  <div class="row-fluid" >
    <%= form_tag password_resets_path, :method => :post do %>
      <div class="span12" >
        <div  style="text-align:center;">
          <label  for="inputEmail" style="padding-right:120px;">Email
            <span style="padding-left:10px;"><%= text_field_tag :email, params[:email] %></span></label>
          <div style="padding-right:90px;">
            <%= link_to "Cancel", home_index_path, :class => ' btn btn-info' %>
            <%= submit_tag "Reset Password", :class => "btn btn-warning" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>