<% content_for :js_with_script_tags do %>
  <script type="text/javascript">
    $(function() {
      // set up player without "internal" playlists
      $f("player2", "http://releases.flowplayer.org/swf/flowplayer-3.2.16.swf", {
        clip: {baseUrl: "<%= root_url %>" }


        // use playlist plugin. again loop is true
      }).playlist("div.petrol", {loop:true});
    });
  </script>
<% end %>

<!-- player container and a splash image (play button) -->
<div class="row-fluid">
  <div class="span7" style="width: 500px; height:350px;">
    <a class="player plain" id="player2">
      <img src="/assets/flowplayer_playlist/play_text_large.png" class="button" alt="" />
    </a>
  </div>

  <div class="span4">
    <div class="clips petrol" id="sortable">
      <% show.cameos.each_with_index do |cameo, index| %>
        <div>
          <div style="float: left;width:25px;">
            <div style="height:25px;">
              <% status = cameo.status== "enabled" ? true : false%>
              <%= check_box_tag('active_cameos[]', cameo.id, checked = status,
                :class => 'cameo_check')  %>
            </div>
            <div style="height:25px;">
              <%= link_to "<i class='sprite-into-icon'></i>".html_safe, cameo_path(cameo),
                :class => 'not-playlist',
                :method => :delete,
                :confirm => "Are you sure to remove this Cameo?",
                :remote => true %>
            </div>
          </div>

          <div style="float:left; width:220px;">
            <a href="<%= "#{configatron.site_address_full}/assets/video_#{index + 1}.flv" %>"
               class="pl-entry">
              <% thumbnail = cameo.thumbnail_url.present? ? cameo.thumbnail_url : "/assets/default_image.png"  %>
              <%= image_tag thumbnail, :class => "pull-left margin-right-10 height-40" %>
              <%= cameo.title %>
              <span>HTTP streaming</span>
              <em>0:20 min</em>
            </a>
          </div>
          <div style="float: left">
          </div>
        </div>
        <div style="clear:both;"></div>
      <% end %>
    </div>
  </div>

</div>

<!-- configure entries inside playlist using standard HTML -->



