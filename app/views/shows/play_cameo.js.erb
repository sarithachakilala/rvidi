var PARTNER_ID = "<%= configatron.kaltura_partner_id %>"
var ENTRY_ID = "<%= @cameo.kaltura_entry_id %>"
var TARGET_DIV_ID1 = "kaltura_player_<%= @cameo.show_id %>"
var TARGET_DIV_ID2 = "kaltura_clipper_<%= @cameo.show_id %>"

<% if params[:controller] == 'shows' && params[:action] == 'show' %>
  loadKalturaPlayer(PARTNER_ID, ENTRY_ID, TARGET_DIV_ID1, true, '<%= @cameo.show.kaltura_playlist_id %>' );
  loadKalturaPlayer(PARTNER_ID, ENTRY_ID, TARGET_DIV_ID2, false, '<%= @cameo.show.kaltura_playlist_id %>' );
<% else %>
  loadKalturaPlayerWithoutPlaylist(PARTNER_ID, ENTRY_ID, TARGET_DIV_ID1, true);
  loadKalturaPlayerWithoutPlaylist(PARTNER_ID, ENTRY_ID, TARGET_DIV_ID2, false);
<% end %>
// To Update the selected Cameo
$(".active-cameo").removeClass('active-cameo');
$("#show_<%= @cameo.show_id %>_cameo_<%= @cameo.id %>_detail").addClass('active-cameo');
