<div class="white-transparent-box accordion" id="accordion2">
  <div class="accordion-group plus-minus-container">
    <div class="accordion-heading">
      
      <div class="accordion-toggle changeable-plus-minus" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
        
        <!-- Heading -->
        <%= content_tag :h2, title, :class=>"pull-left" %>
        
        <!-- Toggle Icon -->
        <i class="sprite-minus-small plus-minus-i pull-right margin-top-10"> </i>
        
        <div class="cl"></div>
        
      </div>
    </div>
    
    <!-- Rendering the form fields -->
    <%= f.fields_for :cameos do |cameo_builder| %>
      <% if controller.controller_name == "shows" %>
        <label class="control-label  blue_label" for="inputPassword">Give your cameo a title</label>
        <div class="controls">
          <%= cameo_builder.text_field :title, :class => "show-show-tag", :placeholder => "Give your cameo a title" %>
        </div>
      <% end %>
      <%= render :partial => "shows/player/record_or_upload",
                 :locals => { :cameo_builder => cameo_builder } %>
    <% end %>
  </div>
</div>