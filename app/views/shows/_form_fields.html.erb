<div id="collapseOne" class="accordion-body collapse in">
  <div class="accordion-inner">
    <div class="control-group">
      <label class="control-label blue_label" for="inputEmail">Title</label>
      <div class="controls">
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.text_field :title, :class => "js-required", :placeholder => "Title" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label  blue_label" for="inputPassword">Description</label>
      <div class="controls">
        <%= f.text_field :description, :class => "js-required", :placeholder => "Description" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label blue_label" for="inputEmail">Display</label>
      <div class="controls radio-inputs-container">
        <label class="radio <%= radio_label_class(@show, 'display_preferences', 'public') %>">
          <%= f.radio_button :display_preferences, "public", {:class => "radio-input" } %>
          Public-Anyone can watch
        </label>
        <label class="radio <%= radio_label_class(@show, 'display_preferences', 'private') %>">
          <%= f.radio_button :display_preferences, "private", {:class => "radio-input"} %>                  
          Private-Only my friends can watch
        </label>
        <label class="radio <%= radio_label_class(@show, 'display_preferences', 'password_protected') %>">
          <%= f.radio_button :display_preferences, "password_protected", {:class => "radio-input"} %>
          Password Protected-Anyone with the password can watch
        </label>
        <label class="password_padding">
          <%= f.password_field :display_preferences_password, :class => "", :placeholder => "Password" %>
        </label>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label blue_label" for="inputEmail">Contributors</label>
      <div class="controls radio-inputs-container">
        <label class="radio <%= radio_label_class(@show, 'contributor_preferences', 'public') %>">
          <%= f.radio_button :contributor_preferences, "public", {:class => "radio-input" } %>
          Public-Anyone can watch
        </label>
        <label class="radio <%= radio_label_class(@show, 'contributor_preferences', 'private') %>">
          <%= f.radio_button :contributor_preferences, "private", {:class => "radio-input"} %>
          Private-Only my friends can watch
        </label>
        <label class="radio <%= radio_label_class(@show, 'contributor_preferences', 'password_protected') %>">
          <%= f.radio_button :contributor_preferences, "password_protected", {:class => "radio-input"} %>
          Password Protected-Anyone with the password can watch
        </label>
        <label class="password_padding">
          <%= f.password_field :contributor_preferences_password, :class => "", :placeholder => "Password" %>
        </label>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label  blue_label" for="inputPassword">Tag the Show</label>
      <div class="controls">
        <%= f.text_field :show_tag, :class => "", :placeholder => "Add a tag" %>
      </div>
    </div>
  </div>

    <div class="control-group">
      <div class="controls">
        <label class="checkbox radiobtn_active_text">
          <%= f.check_box :need_review, {:class => ""}, true, false %>
          Let me review cameos before they're posted
        </label>
      </div>
    </div>
 
<!--    <div class="row-fluid"> 
      <div class="span2"></div>
      <div class="span10"></div>
    </div> -->

</div>
