<h1 id='h1_shows_header'>Listing shows</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @shows.each do |show| %>
    <tr>
      <td><%= show.user_id %></td>
      <td><%= link_to show.title, show %></td>
      <td><%= show.description %></td>
      <td><%= link_to 'Edit', edit_show_path(show), :id => "link_edit_#{show.title.downcase.split(' ').join('_')}" %></td>
      <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' }, id: "link_destroy_#{show.title.downcase.split(' ').join('_')}" %></td>
    </tr>
  <% end %>
</table>
<br />

<%= link_to 'New Show', new_show_path %>
