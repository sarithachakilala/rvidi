<%= form_for @show, :html => {:class => "js-validated-form form-horizontal", :multipart => true} do |f| %>
  <div class="login_container">

    <div class="accordion" id="accordion1">
      <div class="accordion-group plus-minus-container">
        <div class="accordion-heading">
          <div class="accordion-toggle myvision_title line_height_40 changeable-plus-minus" data-toggle="collapse" data-parent="#accordion1" href="#collapseOne">
            Show Details <i class="sprite-question-small"> </i> <i class="sprite-minus-small plus-minus-i pull-right"> </i>
          </div>
        </div>
        <%= render :partial => "shows/form_fields", :locals => { :f => f } %>
      </div>
    </div>

  </div>
  <div class="myvision_container edit_contributor_padding">
    <%= f.fields_for :cameos do|cameo_builder| %>
      <div class="accordion" id="accordion2">
        <div class="accordion-group plus-minus-container">
          <div class="accordion-heading edit_contributor_title_padding">
            <div class="accordion-toggle myvision_title line_height_40 changeable-plus-minus" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
              Record the Opening Cameo  <i class="sprite-minus-small plus-minus-i pull-right "> </i>
            </div>
          </div>
          <div id="collapseTwo" class="accordion-body collapse in">
            <div class="accordion-inner">
              <div class="row-fluid"> 
                <div class="span3 text_align_center">
                  <i class="sprite-camera-big"></i>
                  <div class="font_weight_bold">
                    Click here to record a video clip
                  </div>
                  <div> (15 seconds or less)</div>
                </div>
                <div class="span2 text_align_center">
                  <i class="sprite-or-icon_black"></i>
                </div>
                <div class="span3 text_align_center">
                  <div class="font_weight_bold"> 
                    Upload clip from your computer or Camera
                  </div><br>
                  <!-- <a class="btn btn-info " href="#">Choose</a> -->
                  <%= cameo_builder.hidden_field :user_id, :value => current_user.id %>
                  <%= cameo_builder.hidden_field :director_id, :value => current_user.id %>
                  <%= cameo_builder.hidden_field :status, :value => "approved" %>
                  <%= cameo_builder.file_field :video_file %>
                </div>
              </div>
              <div class="row-fluid" style="padding: 20px;">
                <div class="span8 marging_none">
                  <div class="edit_title_bg"> 
                    <div class="edit_title"> Title of the Show</div>
                    <div class="font_weight_bold edit_subtitle">Director Name </div>
                  </div>
                  <div style="">
                    <img src="/assets/video_img.png" alt="">
                  </div>
                  <div class="font_weight_bold text_align_center newshow_video_caption_bg">
                    your clip is longer than 15 seconds. Please drag the start and end above to create a shorter clip
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>  
  </div>

