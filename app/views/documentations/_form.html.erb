
<%= form_for(@documentation) do |f| %>
  <% if @documentation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@documentation.errors.count, "error") %> prohibited this documentation from being saved:</h2>

      <ul>
        <% @documentation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name, :class => "span8" %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :description %>
      <div class="input">
        <%= f.text_area :description, :class => "span8" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn primary" %>
    </div>
  </fieldset>
<% end %>