<%= form_for([@documentation, @api]) do |f| %>
    
    <fieldset>
      <div class="clearfix">
        <%= f.label :name %>
        <div class="input">
          <%= f.text_field :name, :class => "span8" %>
        </div>
      </div>
      <div class="clearfix">
        <%= f.label :description %>
        <div class="input">
          <%= f.text_area :description, :class => "span8" %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit :class => "btn primary" %>
      </div>
    </fieldset>
<% end %>