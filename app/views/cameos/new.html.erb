          <!-- </form> -->
        </div>
      </div>
    </div>
    
    <div class="buttons_height_100">
      <div class="hr_bg_gettingstarted" style=""> 
        <div class="text_align_center add_cameo_btn"> 
          <%= button_tag( :class => "btn btn-info publish-cameo-btn") do %>
            <i class='sprite-reel-white'></i> Publish Cameo
          <% end %>
        </div>
      </div>
    </div>

