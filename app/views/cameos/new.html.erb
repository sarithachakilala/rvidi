                <label class="checkbox inline">
                  <input type="checkbox" value="option1" class="checkbox-input" id="inlineCheckbox1"> John Doe
                </label>
              </div>
              <div class="span4">
                <label class="checkbox inline">
                  <input type="checkbox" value="option2" class="checkbox-input" id="inlineCheckbox2"> Jerry James
                </label>
              </div>
              <div class="span4">
              </div>
            </div>
            <div class="row-fluid">
              <div class="span4 padding_left">
                <label class="checkbox inline">
                  <input type="checkbox" value="option1" class="checkbox-input" id="inlineCheckbox3"> John Doe
